function(CopyFilelist source dest)
    foreach(_file ${${source}})
        GET_FILENAME_COMPONENT(__destFile ${_file} NAME)
        execute_process(
            COMMAND 
                ${CMAKE_COMMAND} -E copy_if_different ${_file} ${dest}/${__destFile}
        )
    endforeach()
endfunction()

